<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/style.css" />
  <title>QR Code สำหรับเช็กชื่อ</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
  <style>
    body {
      text-align: center;
      font-family: sans-serif;
      margin-top: 30px;
    }
    #timer {
      font-size: 1.5rem;
      margin-top: 10px;
      color: #555;
    }
  </style>
</head>
<body>
   <% if (showNavbar) { %>
    <%- include('partials/navbar', { currentUser: currentUser, currentRole: currentRole }) %>
  <% } %>
  <h2>QR Code จะอัปเดตทุก 20 วินาที</h2>

  <div id="qrcode"></div>
  <div id="timer">เหลือเวลา 20 วินาที</div> <!-- ✅ แสดงเวลาถอยหลัง -->

  <script>
    const classroomId = "<%= classroomId %>";
    let countdown = 20;
    const timerElement = document.getElementById('timer');

    const updateCountdown = () => {
      countdown--;
      if (countdown <= 0) countdown = 20;
      timerElement.textContent = `เหลือเวลา ${countdown} วินาที`;
    };

    const startCountdown = () => {
      setInterval(updateCountdown, 1000); // อัปเดตทุก 1 วิ
    };

    const fetchNewToken = async () => {
      try {
        const res = await fetch(`/api/qr/${classroomId}`);
        const data = await res.json();

        const qrContainer = document.getElementById('qrcode');
        qrContainer.innerHTML = '';
        QRCode.toCanvas(data.token, { width: 200 }, (err, canvas) => {
          if (err) return console.error(err);
          qrContainer.appendChild(canvas);
        });

        countdown = 20; // รีเวลาใหม่ทุกครั้งที่ QR อัปเดต
      } catch (err) {
        console.error('โหลด token ผิดพลาด:', err);
      }
    };

    fetchNewToken();
    setInterval(fetchNewToken, 20000); // รี QR ทุก 20 วินาที
    startCountdown(); // เริ่มนับถอยหลัง
  </script>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
