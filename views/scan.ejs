<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/style.css" />
  <title>สแกน QR เพื่อเช็กชื่อ</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
</head>
<body>
   <% if (showNavbar) { %>
    <%- include('partials/navbar', { currentUser: currentUser, currentRole: currentRole }) %>
  <% } %>
  <h3 class="text-center">กรุณาสแกน QR Code</h3>
  <div id="reader" style="width: 300px; margin: auto;"></div>
  <div id="result" style="text-align: center; margin-top: 10px;"></div>
  <center><a href="/classroom" class="btn btn-secondary">ย้อนกลับ</a></center>
  

  <script>
  function onScanSuccess(decodedText) {
    fetch('/api/scan', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ token: decodedText })
    })
    .then(r => r.json())
    .then(data => {
      if (data.redirect) {
        window.location.href = data.redirect; // ไปหน้ายืนยัน
      } else {
        document.getElementById('result').innerText = data.message || data.error || 'ผิดพลาด';
      }
    })
    .catch(err => {
      console.error(err);
      document.getElementById('result').innerText = 'เกิดข้อผิดพลาดในการเช็กชื่อ';
    });

    html5QrcodeScanner.clear();
  }
  const html5QrcodeScanner = new Html5QrcodeScanner("reader", { fps: 10, qrbox: 250 });
  html5QrcodeScanner.render(onScanSuccess);

    // คำที่ต้องการตรวจหา
  const targetWords = ["Token ไม่ถูกต้องหรือหมดอายุ", "Token", "หมดอายุ", "ไม่ถูกต้อง"];

  function checkAndReload() {
    const bodyText = document.body.innerText.toLowerCase();

    for (let word of targetWords) {
      if (bodyText.includes(word.toLowerCase())) {
        location.reload(); // รีเฟรชหน้าเว็บ
        break;
      }
    }
  }

  setInterval(checkAndReload, 1000);
</script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  
</body>
</html>
