<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Classroom</title>
  <link rel="stylesheet" href="/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
  <% if (showNavbar) { %>
    <%- include('partials/navbar', { currentUser: currentUser, currentRole: currentRole }) %>
  <% } %>

  <% 
    // ฟังก์ชันใช้ซ้ำในหน้า
    const weekdayTh = ['อาทิตย์','จันทร์','อังคาร','พุธ','พฤหัสบดี','ศุกร์','เสาร์'];
    function dowLabel(v) {
      const s = String(v);
      if (/^[0-6]$/.test(s)) return weekdayTh[Number(s)];
      return v || '-';
    }
    function hhmm(x) {
      if (!x) return '';
      const s = String(x);
      return s.slice(0,5); // 'HH:MM'
    }
  %>

  <div class="container mt-5">
    <h1 class="text-center mb-3">ยินดีต้อนรับสู่ Classroom</h1>

    <!-- Toolbar: ปี/ภาค + ค้นหา (แถวเดียว) -->
    <div class="row g-2 align-items-center mb-3">
      <div class="col-12 col-md-auto">
        <form id="filterForm" class="d-flex align-items-center gap-2" method="get" action="/classroom">
          <label class="mb-0">ปีการศึกษา (พ.ศ.)</label>
          <select id="yearSel" name="year" class="form-select form-select-sm">
            <% (yearOptions || []).forEach(y => { %>
              <option value="<%= y %>" <%= (Number(selectedYear)===Number(y) ? 'selected' : '') %>><%= y %></option>
            <% }) %>
          </select>

          <label class="mb-0 ms-2">ภาค</label>
          <select id="semSel" name="semester" class="form-select form-select-sm">
            <% (semesterOptions || [1,2,3]).forEach(s => { %>
              <option value="<%= s %>" <%= (Number(selectedSem)===Number(s) ? 'selected' : '') %>><%= s %></option>
            <% }) %>
          </select>
        </form>
      </div>

      <% if (role === 'teacher') { %>
        <div class="col-12 col-md">
          <input type="text" id="searchInput" class="form-control"
                 placeholder="ค้นหาชื่อห้องเรียน" onkeyup="filterTable()" />
        </div>
      <% } %>
    </div>

    <% if (role === 'teacher') { %>
      <div class="mb-3 text-center">
        <a href="/classroom/add" class="btn btn-success">+ สร้างห้องเรียนใหม่</a>
      </div>

      <% if (classrooms && classrooms.length > 0) { %>
        <h4 class="text-center mt-3">ห้องเรียนของคุณ</h4>

        <div class="table-responsive mt-2">
          <table id="classroomTable" class="table table-bordered table-striped align-middle">
            <thead class="table-secondary">
              <tr class="text-center">
                <th>ชื่อห้องเรียน</th>
                <th>ภาคเรียน</th>
                <th>วัน/เวลาเรียน</th>
                <th>เลขห้อง</th>
                <th>อาจารย์</th>
                <th>คำอธิบายชั้นเรียน</th>
                <th class="text-center">การจัดการ</th>
              </tr>
            </thead>
            <tbody>
              <% classrooms.forEach(cls => { %>
                <tr>
                  <td class="text-start"><%= cls.classroomname %></td>
                  <td class="text-center">
                    <% const y = Number(cls.academic_year); %>
                    <%= (Number.isFinite(y) && cls.semester != null)
                          ? ('ภาคที่ ' + cls.semester + ' / ' + y)
                          : '-' %>
                  </td>
                  <td class="text-center">
                    <%= dowLabel(cls.day_of_week) %>
                    <%= cls.start_time ? ' ' + hhmm(cls.start_time) : '' %>
                    <%= cls.end_time   ? '–' + hhmm(cls.end_time)   : '' %>
                  </td>
                  <td class="text-center"><%= cls.roomnumber %></td>
                  <td class="text-center"><%= cls.teacher_fullname %></td>
                  <td class="text-start"><%= cls.description %></td>
                  
                  <td class="p-1 text-center">
                    <div class="d-flex gap-2 justify-content-center">
                      <a href="/classroom/view/<%= cls.classroomid %>" class="btn btn-info btn-sm">เข้า class</a>
                      <a href="/classroom/edit/<%= cls.classroomid %>" class="btn btn-warning btn-sm">แก้ไข</a>
                      <form action="/classroom/delete/<%= cls.classroomid %>" method="POST" class="m-0">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('ยืนยันการลบห้องเรียนนี้?')">ลบ</button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-center text-muted">ยังไม่มีห้องเรียนที่คุณเป็นเจ้าของ</p>
      <% } %>

    <% } else if (role === 'student') { %>
      <% if (classrooms && classrooms.length > 0) { %>
        <h4 class="text-center mt-3">ห้องเรียนที่คุณเป็นสมาชิก</h4>

        <div class="mt-2 d-grid d-md-block text-center">
          <a href="/scan" class="btn btn-success btn-lg rounded-pill w-md-auto px-4 py-2">
            สแกน QR เพื่อเช็กชื่อ
          </a>
        </div>

        <div class="table-responsive mt-2">
          <table class="table table-bordered table-striped align-middle">
            <thead class="table-secondary">
              <tr class="text-center">
                <th>ชื่อห้องเรียน</th>
                <th>ภาคเรียน</th>
                <th>วัน/เวลาเรียน</th>
                <th>เลขห้อง</th>
                <th>อาจารย์</th>
                <th>คำอธิบายชั้นเรียน</th>
                <th class="text-center">รายละเอียด</th>
              </tr>
            </thead>
            <tbody>
              <% classrooms.forEach(cls => { %>
                <tr>
                  <td class="text-start"><%= cls.classroomname %></td>
                  <td class="text-center">
                    <%= (cls.academic_year != null && cls.semester != null)
                          ? ('ภาคที่ ' + cls.semester + ' / ' + cls.academic_year)
                          : '-' %>
                  </td>
                  <td class="text-center">
                    <%= dowLabel(cls.day_of_week) %>
                    <%= cls.start_time ? ' ' + hhmm(cls.start_time) : '' %>
                    <%= cls.end_time   ? '–' + hhmm(cls.end_time)   : '' %>
                  </td>
                  <td class="text-center"><%= cls.roomnumber %></td>
                  <td class="text-center"><%= cls.teacher_fullname %></td>
                  <td class="text-start"><%= cls.description %></td>
                  <td class="text-center">
                    <a href="/classroom/view/<%= cls.classroomid %>" class="btn btn-info btn-sm">ดูรายละเอียด</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-center text-muted">คุณยังไม่ได้เป็นสมาชิกในห้องเรียนใด ๆ</p>
      <% } %>
    <% } else { %>
      <p class="text-center">คุณยังไม่มีห้องเรียน</p>
    <% } %>
  </div>

  <!-- ค้นหาชื่อห้องเรียน (เฉพาะตารางครู) -->
  <script>
    function filterTable() {
      const input = document.getElementById('searchInput');
      const filter = (input?.value || '').toLowerCase();
      const table = document.getElementById('classroomTable');
      if (!table) return;
      const rows = table.getElementsByTagName('tr');
      for (let i = 1; i < rows.length; i++) {
        const cell = rows[i].getElementsByTagName('td')[0]; // ช่อง "ชื่อห้องเรียน"
        if (cell) {
          const text = cell.textContent || cell.innerText;
          rows[i].style.display = text.toLowerCase().includes(filter) ? '' : 'none';
        }
      }
    }
  </script>

  <!-- ทำให้การเปลี่ยน "ปี" ล้างค่า "ภาค" ก่อน submit และภาคเปลี่ยนให้ submit -->
  <script>
    (function(){
      const form   = document.getElementById('filterForm');
      const yearEl = document.getElementById('yearSel');
      const semEl  = document.getElementById('semSel');
      if (!form || !yearEl || !semEl) return;

      // เปลี่ยนปี -> ล้างภาคแล้ว submit
      yearEl.addEventListener('change', () => {
        semEl.value = '';
        form.submit();
      });

      // เปลี่ยนภาค -> submit ทันที
      semEl.addEventListener('change', () => form.submit());
    })();
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
